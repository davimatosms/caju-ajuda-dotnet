<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CajuAjuda.Desktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CajuAjuda.Desktop.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CajuAjuda">

    <Shell.TitleView>
        <Grid Padding="10">
            <!-- Logo image removed; use plain app title to avoid runtime asset dependency -->
            <Label Text="Caju Ajuda" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" />
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>