<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CajuAjuda.Desktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CajuAjuda.Desktop.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackgroundColor="{StaticResource Gray50}"
    Title="Caju Ajuda">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}" 
              Padding="25" 
              HeightRequest="140">
            <VerticalStackLayout VerticalOptions="Center" Spacing="8">
                <Label Text="CAJU AJUDA" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Start"/>
                <Label Text="Painel do Tecnico" 
                       FontSize="15"
                       TextColor="White"
                       Opacity="0.9"
                       HorizontalOptions="Start"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Dashboard">
        <ShellContent
            Title="Chamados"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Perfil">
        <ShellContent
            Title="Meu Perfil"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="ProfilePage" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid Padding="20" 
              BackgroundColor="{StaticResource Gray100}" 
              HeightRequest="80">
            <Button Text="Sair" 
                    Clicked="OnLogoutClicked"
                    BackgroundColor="{StaticResource Danger}"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"/>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
