<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CajuAjuda.Desktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CajuAjuda.Desktop.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackgroundColor="{StaticResource SidebarBackground}"
    FlyoutWidth="280"
    Title="Caju Ajuda">

    <!-- Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}"
              Padding="24"
              HeightRequest="140">
            <VerticalStackLayout VerticalOptions="Center" Spacing="12">
                <Label Text="CAJU AJUDA"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextOnPrimary}"/>
                <Label Text="Painel TÃ©cnico"
                       FontSize="14"
                       TextColor="{StaticResource TextOnPrimary}"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Menu Items -->
    <FlyoutItem Title="Dashboard">
        <ShellContent
            Title="Chamados"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Perfil">
        <ShellContent
            Title="Meu Perfil"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="ProfilePage" />
    </FlyoutItem>

    <!-- Footer -->
    <Shell.FlyoutFooter>
        <Grid Padding="20"
              BackgroundColor="{StaticResource Gray800}"
              HeightRequest="80">
            <Button Text="Sair"
                    Clicked="OnLogoutClicked"
                    Style="{StaticResource DangerButton}"/>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
