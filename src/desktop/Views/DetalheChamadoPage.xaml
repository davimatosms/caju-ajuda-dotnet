                    <Label Text="Detalhes do Chamado" FontSize="20" FontAttributes="Bold" />

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="TÃ­tulo: " FontAttributes="Bold" />
