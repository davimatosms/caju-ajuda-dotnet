<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Branco Puro -->
    <Color x:Key="White">#FFFFFFFF</Color>

    <!-- Tipografia -->
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>
    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Gray700}" />
    </Style>
    <Style x:Key="BodyLabel" TargetType="Label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
    </Style>

    <!-- Entry -->
    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray50}" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- Card Border -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource Gray200}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Separator -->
    <Style x:Key="SectionSeparator" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
        <Setter Property="Margin" Value="0,10" />
    </Style>

</ResourceDictionary>
