<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ===================================================== -->
    <!-- CORES PRIMÁRIAS (Web Design System)                   -->
    <!-- ===================================================== -->
    
    <Color x:Key="Primary">#FF8F00</Color>
    <Color x:Key="PrimaryDark">#FF6F00</Color>
    <Color x:Key="PrimaryLight">#FFB74D</Color>
    <Color x:Key="PrimaryHover">#F57C00</Color>
    
    <Color x:Key="Secondary">#1976D2</Color>
    <Color x:Key="SecondaryDark">#1565C0</Color>
    <Color x:Key="SecondaryLight">#64B5F6</Color>

    <!-- ===================================================== -->
    <!-- CORES SEMÂNTICAS                                      -->
    <!-- ===================================================== -->
    
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessDark">#059669</Color>
    <Color x:Key="SuccessLight">#D1FAE5</Color>
    
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningDark">#D97706</Color>
    <Color x:Key="WarningLight">#FEF3C7</Color>
    
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="DangerDark">#DC2626</Color>
    <Color x:Key="DangerLight">#FEE2E2</Color>
    
    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoDark">#2563EB</Color>
    <Color x:Key="InfoLight">#DBEAFE</Color>

    <!-- ===================================================== -->
    <!-- ESCALA DE CINZAS                                      -->
    <!-- ===================================================== -->
    
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- ===================================================== -->
    <!-- BACKGROUNDS                                           -->
    <!-- ===================================================== -->
    
    <Color x:Key="PageBackground">#F9FAFB</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="SidebarBackground">#1F2937</Color>
    <Color x:Key="HeaderBackground">#FFFFFF</Color>
    
    <Color x:Key="OverlayLight">#10000000</Color>
    <Color x:Key="OverlayMedium">#50000000</Color>
    <Color x:Key="OverlayDark">#AA000000</Color>

    <!-- ===================================================== -->
    <!-- TEXTO                                                 -->
    <!-- ===================================================== -->
    
    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="TextTertiary">#9CA3AF</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="TextOnDark">#FFFFFF</Color>
    <Color x:Key="TextDisabled">#D1D5DB</Color>

    <!-- ===================================================== -->
    <!-- BORDAS                                                -->
    <!-- ===================================================== -->
    
    <Color x:Key="Border">#E5E7EB</Color>
    <Color x:Key="BorderLight">#F3F4F6</Color>
    <Color x:Key="BorderDark">#D1D5DB</Color>

    <!-- ===================================================== -->
    <!-- STATUS DE CHAMADOS                                    -->
    <!-- ===================================================== -->
    
    <Color x:Key="StatusAberto">#3B82F6</Color>
    <Color x:Key="StatusAndamento">#F59E0B</Color>
    <Color x:Key="StatusAguardando">#8B5CF6</Color>
    <Color x:Key="StatusResolvido">#10B981</Color>
    <Color x:Key="StatusFechado">#6B7280</Color>

    <!-- ===================================================== -->
    <!-- PRIORIDADES                                           -->
    <!-- ===================================================== -->
    
    <Color x:Key="PrioridadeBaixa">#10B981</Color>
    <Color x:Key="PrioridadeMedia">#F59E0B</Color>
    <Color x:Key="PrioridadeAlta">#F97316</Color>
    <Color x:Key="PrioridadeUrgente">#EF4444</Color>

    <!-- ===================================================== -->
    <!-- SOMBRAS                                               -->
    <!-- ===================================================== -->
    
    <Color x:Key="ShadowLight">#10000000</Color>
    <Color x:Key="ShadowMedium">#30000000</Color>
    <Color x:Key="ShadowDark">#50000000</Color>

</ResourceDictionary>
